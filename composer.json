{
    "name": "ork/crom",
    "description": "A tool to ensure that a relational database schema meets a set of specifications.",
    "homepage": "http://github.com/AlexHowansky/ork-crom",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Alex Howansky",
            "email": "alex.howansky@gmail.com",
            "homepage": "https://github.com/AlexHowansky"
        }
    ],
    "require": {
        "bramus/ansi-php": "^3.1",
        "doctrine/dbal": "^3.6.6",
        "jawira/case-converter": "^3.5.1",
        "monolog/monolog": "^3.4",
        "php": "^8.1",
        "symfony/yaml": "^6.3.3"
    },
    "require-dev": {
        "ext-pdo_sqlite": "*",
        "ork/phpcs": "^2.8.1",
        "phpmetrics/phpmetrics": "^2.8.2",
        "phpstan/phpstan": "^1.10.33",
        "phpunit/phpunit": "^10.3.3",
        "rector/rector": "^0.18.2",
        "roave/security-advisories": "dev-master"
    },
    "suggest": {
        "ext-oci8": "Required to scan Oracle databases.",
        "ext-pdo_mysql": "Required to scan MySQL databases.",
        "ext-pdo_pgsql": "Required to scan Postgres databases.",
        "ext-pdo_sqlite": "Required to scan SQLite databases.",
        "ext-pdo_sqlsrv": "Required to scan SQLServer databases."
    },
    "autoload": {
        "psr-4": {
            "Ork\\Crom\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ork\\Crom\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "coverage": "XDEBUG_MODE=coverage phpunit --no-progress",
        "coverage-functional": "XDEBUG_MODE=coverage phpunit --testsuite functional --no-progress",
        "coverage-unit": "XDEBUG_MODE=coverage phpunit --testsuite unit --no-progress",
        "doc": "phpDocumentor",
        "metrics": "phpmetrics --config=phpmetrics.json",
        "phpcs": "phpcs",
        "phpstan": "phpstan analyze",
        "rector": "rector --dry-run --clear-cache",
        "test": "phpunit --no-coverage --no-progress",
        "test-functional": "phpunit --testsuite functional --no-coverage --no-progress",
        "test-unit": "phpunit --testsuite unit --no-coverage --no-progress"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "audit": {
            "abandoned": "report"
        }
    }
}
